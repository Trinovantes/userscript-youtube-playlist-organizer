{
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        },
    },
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,

        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        },
    },
    "exclude": [
        "**/raw/**/*",
        "**/*.html",
        "node_modules",
        "dist",
    ],
    "include": [
        "**/*",
        ".eslintrc.js",
    ],
}
